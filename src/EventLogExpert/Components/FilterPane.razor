@using EventLogExpert.Shared.Components
@inherits FluxorComponent

@inject IState<EventLogState> EventLogState
@inject IState<FilterPaneState> FilterPaneState
@inject IState<SettingsState> SettingsState

<div class="filter-pane">
    <div class="filter-header">
        <div>
            <button class="button-primary" @onclick="AddFilter">
                <i class="bi bi-plus-circle"></i> Add Filter
            </button>

            @if (!_isDateFilterVisible)
            {
                <button class="button-primary" @onclick="AddDateFilter">
                    <i class="bi bi-plus-circle"></i> Add Date Filter
                </button>
            }

            @if (!_isAdvancedFilterVisible)
            {
                <button class="button-primary" @onclick="AddAdvancedFilter">
                    <i class="bi bi-plus-circle"></i> Add Advanced Filter
                </button>
            }
        </div>

        @if (FilterPaneState.Value.CurrentFilters.Any() || _isDateFilterVisible || _isAdvancedFilterVisible)
        {
            <div class="header-center">
                @if (FilterPaneState.Value.CurrentFilters.Any())
                {
                    <span>[Active Filters: @GetActiveFilters()]</span>
                }
            </div>

            <span class="button-toggle header-justify-right" data-rotate="@MenuState" @onclick="ToggleMenu">
                <i class="bi bi-caret-up"></i>
            </span>
        }
    </div>

    <div class="filter-group" data-toggle="@MenuState">
        @if (_isDateFilterVisible)
        {
            <EditForm id="filter-form" Model="_model">
                <span>
                    After: <InputDate class="input-filter-datetime" Type="InputDateType.DateTimeLocal"
                        @bind-Value="_model.After" disabled="@(!_canEditDate)" />
                </span>
                <span>
                    Before: <InputDate class="input-filter-datetime" Type="InputDateType.DateTimeLocal"
                        @bind-Value="_model.Before" disabled="@(!_canEditDate)" />
                </span>

                @if (_canEditDate)
                {
                    <button class="button-save" @onclick="ApplyDateFilter">
                        <i class="bi bi-check-circle"></i> Apply
                    </button>

                    <button class="button-remove" type="button" @onclick="RemoveDateFilter">
                        <i class="bi bi-dash-circle"></i> Remove
                    </button>
                }
                else
                {
                    <button class="button-primary" @onclick="EditDateFilter">
                        <i class="bi bi-funnel"></i> Edit
                    </button>

                    @if (FilterPaneState.Value.FilteredDateRange!.IsEnabled)
                    {
                        <button class="button-remove" @onclick="ToggleDateFilter">
                            <i class="bi bi-dash-circle"></i> Disable
                        </button>
                    }
                    else
                    {
                        <button class="button-save" @onclick="ToggleDateFilter">
                            <i class="bi bi-plus-circle"></i> Enable
                        </button>
                    }
                }
            </EditForm>
        }

        @foreach (var item in FilterPaneState.Value.CurrentFilters)
        {
            <FilterRow Value="@item" />
        }

        @if (_isAdvancedFilterVisible)
        {
            <div>
                <span>
                    Expression: <input class="input-advanced-filter" type="text"
                        placeholder="(Id == 1000 || Id == 1001) && Description.Contains('Fault')"
                        @oninput="AdvancedFilterChanged" disabled="@(!_canEditAdvancedFilter)" />
                </span>
                @if (_canEditAdvancedFilter)
                {
                    if (_isAdvancedFilterValid)
                    {
                        <button class="button-save" type="button" @onclick="ApplyAdvancedFilter">
                            <i class="bi bi-check-circle"></i> Apply
                        </button>
                    }

                    <button class="button-remove" type="button" @onclick="RemoveAdvancedFilter">
                        <i class="bi bi-dash-circle"></i> Remove
                    </button>
                }
                else
                {
                    <button class="button-primary" type="button" @onclick="EditAdvancedFilter">
                        <i class="bi bi-funnel"></i> Edit
                    </button>

                    @if (FilterPaneState.Value.IsAdvancedFilterEnabled)
                    {
                        <button class="button-remove" @onclick="ToggleAdvancedFilter">
                            <i class="bi bi-dash-circle"></i> Disable
                        </button>
                    }
                    else
                    {
                        <button class="button-save" @onclick="ToggleAdvancedFilter">
                            <i class="bi bi-plus-circle"></i> Enable
                        </button>
                    }
                }

                @if (!_isAdvancedFilterValid)
                {
                    <div hidden="@(string.IsNullOrWhiteSpace(_advancedFilterErrorMessage))">
                        <span class="advanced-filter-error">@_advancedFilterErrorMessage</span>
                    </div>
                }
            </div>
        }
    </div>
</div>
