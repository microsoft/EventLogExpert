@using EventLogExpert.UI

<div id="context-menu">
    <div @onclick="() => CopySelected(CopyType.Full)">Copy Selected</div>
    <div @onclick="() => CopySelected(CopyType.Simple)">Copy Selected (Simple)</div>
    <div @onclick="() => CopySelected(CopyType.Xml)">Copy Selected (XML)</div>

    <hr />

    <div class="sub-menu">
        <div>Include <i class="bi bi-caret-right"></i></div>
        <ul>
            @foreach (FilterType item in Enum.GetValues(typeof(FilterType)))
            {
                @if (item is FilterType.Description or FilterType.Xml) { continue; }

                <li @onclick="() => FilterEvent(item, FilterEvaluator.Equals)">@item.ToFullString()</li>
            }
        </ul>
    </div>

    <div class="sub-menu">
        <div>Exclude <i class="bi bi-caret-right"></i></div>
        <ul>
            @foreach (FilterType item in Enum.GetValues(typeof(FilterType)))
            {
                @if (item is FilterType.Description or FilterType.Xml) { continue; }

                <li @onclick="() => FilterEvent(item, FilterEvaluator.NotEqual)">@item.ToFullString()</li>
            }
        </ul>
    </div>
</div>
