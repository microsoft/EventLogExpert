@typeparam T

<div class="@CssClass" highlighted="@(_parent.HighlightedItem?.Equals(this) ?? false)" @onmousedown="SelectItem"
    @onmouseenter="HighlightItem" selected="@_isSelected">
    @if (ChildContent is not null)
    {
        @ChildContent
    }
    else
    {
        @DisplayString
    }
</div>
