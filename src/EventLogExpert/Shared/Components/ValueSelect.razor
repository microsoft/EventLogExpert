@typeparam T
@using EventLogExpert.Shared.Base
@inherits BaseComponent<T>

<div class="dropdown-input" @onkeydown="HandleKeyDown" @onkeydown:preventDefault="_preventDefault" @ref="_selectComponent">
    <input aria-expanded="false" aria-haspopup="menu" aria-label="@AriaLabel" class="@CssClass" @oninput="OnInputChange"
        readonly="@(!IsInput || IsMultiSelect)" role="menu" tabindex="0" type="text" value="@DisplayString" />

    <div class="dropdown-list" tabindex="-1">
        <CascadingValue Value="this">
            @ChildContent
        </CascadingValue>
    </div>
</div>
